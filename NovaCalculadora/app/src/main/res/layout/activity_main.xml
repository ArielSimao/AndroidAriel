<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="andre.novacalculadora.MainActivity">


    <LinearLayout
        android:layout_width="313dp"
        android:layout_height="354dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="78dp">

        <EditText
            android:id="@+id/edtValor1"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Valor 1"
            android:inputType="textPersonName"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="27dp" />

        <EditText
            android:id="@+id/edtValor2"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Valor 2"
            android:inputType="textPersonName"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="91dp" />

        <Button
            android:id="@+id/btnSoma"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:text="Soma"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="158dp" />

        <Button
            android:id="@+id/btnSub"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:text="Subtracao"
            tools:layout_editor_absoluteX="139dp"
            tools:layout_editor_absoluteY="231dp" />

        <Button
            android:id="@+id/btnMult"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:text="Multiplicacao"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="311dp" />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:text="Divisao"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="391dp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
